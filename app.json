{
  "expo": {
    "name": "Synapse",
    "slug": "Synapse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./src/Assets/fonts/WorkSans-Regular.ttf",
            "./src/Assets/fonts/Figtree-Bold.ttf",
            "./src/Assets/fonts/Figtree-Light.ttf",
            "./src/Assets/fonts/Figtree-Medium.ttf.ttf",
            "./src/Assets/fonts/Figtree-Regular.ttf",
            "./src/Assets/fonts/Figtree-SemiBold.ttf"
          ]
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID for authentication to enhance security."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "USE_BIOMETRIC"
      ],
      "package": "com.sakshi_rn_dev.Synapse"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}