{
  "expo": {
    "name": "Synapse",
    "slug": "Synapse",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./src/Assets/fonts/WorkSans-Regular.ttf",
            "./src/Assets/fonts/Figtree-Bold.ttf",
            "./src/Assets/fonts/Figtree-Light.ttf",
            "./src/Assets/fonts/Figtree-Medium.ttf",
            "./src/Assets/fonts/Figtree-Regular.ttf",
            "./src/Assets/fonts/Figtree-SemiBold.ttf"
          ]
        }
      ]
    ],
    "ios": {
      "bundleIdentifier": "com.shertechinfo.synapse",
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID for authentication to enhance security."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDHyIjrBQeMHueccXbdOK2gX3XYGmEo6N4"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "USE_BIOMETRIC"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDHyIjrBQeMHueccXbdOK2gX3XYGmEo6N4"
        }
       
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "4dd3cb60-30b5-444b-b91a-b4e98badf5d7"
      }
    }
  }
}
